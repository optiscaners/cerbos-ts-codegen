{
	"name": "@estino/cerbos-ts-codegen",
	"version": "0.0.8",
	"description": "codegen for cerbos policy schemas",
	"keywords": [
		"cerbos",
		"authorization",
		"codegen",
		"typescript"
	],
	"packageManager": "pnpm@8.15.5",
	"repository": "github:optiscaners/cerbos-ts-codegen",
	"type": "module",
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"bin": {
		"@estino/cerbos-ts-codegen": "dist/index.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup",
		"dev:transform": "tsup src/dev.ts --watch --onSuccess 'node dist/dev.js'",
		"dev": "tsup --watch --onSuccess 'node dist/index.js'",
		"tsc": "tsc --noEmit",
		"format": "prettier --write . --cache",
		"pub:release": "pnpm build && pnpm publish --access public"
	},
	"author": "Manuel DugueÃÅ",
	"license": "MIT",
	"homepage": "https://www.estino.de/",
	"dependencies": {
		"@cerbos/core": "^0.13.0",
		"@cerbos/http": "^0.14.0",
		"@inquirer/prompts": "^3.0.3",
		"@types/json-schema": "^7.0.12",
		"@types/node": "^20.5.1",
		"camelcase": "^8.0.0",
		"chalk": "^5.3.0",
		"js-yaml": "^4.1.0",
		"json-schema": "^0.4.0",
		"json-schema-to-typescript": "^13.0.2",
		"prettier": "^3.0.2",
		"ts-morph": "^19.0.0",
		"typescript": "^5.1.6",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.5",
		"tsup": "^7.2.0"
	}
}
